    "# 蒙特卡罗实验\n",
    "import numpy as np\n",
    "\n",
    "for n in [1000, 10000, 100000, 1000000, 10000000]:\n",
    "    num = 0\n",
    "    for _ in range(0,n):\n",
    "        x = np.random.rand()\n",
    "        y = np.random.rand()\n",
    "        if x*x + y*y < 1:\n",
    "            num += 1\n",
    "    print(f'{n=}, pi={num/n*4}')"
   ]
